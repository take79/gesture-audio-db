<p id="notice"><%= notice %></p>

<h1>Listing Gesture Tags</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th>id</th>
      <th>metaphoric</th>
      <th>iconic</th>
      <th>deictic</th>
      <th>beat</th>
    </tr>
    <% @gesture_tags.each do |gesture_tag| %>
      <tr align="right">
        <td><%= gesture_tag.id %></td>
        <td><%= gesture_tag.metaphoric %>
        <td><%= gesture_tag.iconic %>
        <td><%= gesture_tag.deictic %>
        <td><%= gesture_tag.beat %>
        <td><%= link_to 'Show', gesture_tag %></td>
        <td><%= link_to 'Edit', edit_gesture_tag_path(gesture_tag) %></td>
        <td><%= link_to 'Destroy', gesture_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

