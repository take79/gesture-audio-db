<p id="notice"><%= notice %></p>

<h1>Listing Actors</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>gender</th>
      <th>age</th>
    <% @actors.each do |a| %>
      <tr align="right">
        <td><%= a.id %></td>
        <td><%= a.name %></td>
        <td><%= a.gender %></td>
        <td><%= a.age %></td>
        <td><%= link_to 'Show', a %></td>
        <td><%= link_to 'Edit', edit_actor_path(a) %></td>
        <td><%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

